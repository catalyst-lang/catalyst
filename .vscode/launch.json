{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "(lldb) Launch Parser",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/toolchain/build/parser",
            "args": ["test_files/1.ct", "--dump-ast"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "SCons Debug LLDB",
            "environment": [],
            "externalConsole": false,
            "MIMode": "lldb"
        },
        {
            "name": "(Windows) Launch parser",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/toolchain/build/parser.exe",
            "preLaunchTask": "SCons Debug Windows",
            "args": ["test_files/1.ct"],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "console": "integratedTerminal"
        }
    ]
}
